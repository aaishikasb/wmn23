{
  "manifest_version": 3,
  "name": "TweetReadPro",
  "version": "1.0",
  "description": "A simple extension that changes the way you usually read tweets.",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "browser_action": {
    "default_icon": "icon.png"
   },
  "permissions": [ "activeTab", "scripting" ],
  "host_permissions": [ "https://twitter.com/*" ],
  "content_scripts": [
    {
      "matches": [ "https://twitter.com/*" ],
      "js": [ "content.js" ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icon.png" ],
      "matches": [ "https://twitter.com/*" ]
    }
  ]
}